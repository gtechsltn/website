@inject BowerVersions BowerVersions
@inject SiteOptions Options
@{
    ViewBag.Title = "About Martin";
    ViewBag.MetaDescription = "Information about Martin Costello, a software developer and tester.";
    int yearsExperience = (int)Math.Floor((DateTimeOffset.UtcNow - new DateTimeOffset(2006, 9, 4, 0, 0, 0, TimeSpan.Zero)).TotalDays / 365);
}
<div class="row">
    <div class="col-md-4">
        <br />
        <noscript>
            <img class="center-block img-responsive" height="300" width="288" src="@ViewBag.MetaImage" alt="@ViewBag.MetaImageAltText" title="@ViewBag.MetaImageAltText" asp-append-version="true" />
        </noscript>
        <lazyimg class="center-block img-responsive" height="300" width="288" src="@ViewBag.MetaImage" alt="@ViewBag.MetaImageAltText" title="@ViewBag.MetaImageAltText" asp-append-version="true" />
    </div>
    <div class="col-md-8">
        <h1>About Martin</h1>
        <p>Martin Costello is a C# .NET developer and tester with over @yearsExperience years of experience testing and developing high-quality software and is based in London, UK.</p>
        <p>His experience includes various parts of the Microsoft technology stack and cloud hosting, including:</p>
        <ul>
            <li>ASP.NET</li>
            <li>Amazon Web Services</li>
            <li>EntityFramework</li>
            <li>Git</li>
            <li>Microsoft Azure</li>
            <li>MSBuild</li>
            <li>MSTest/NUnit/xunit</li>
            <li>SQL Server</li>
            <li>Visual Studio Team Services/Team Foundation Server</li>
            <li>WCF</li>
        </ul>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-3">
        <h4>LinkedIn</h4>
        <noscript>
            <a href="https://www.linkedin.com/pub/martin-costello/37/253/16a" title="View Martin's LinkedIn profile">Martin Costello on LinkedIn</a>
        </noscript>
        <script async type="IN/MemberProfile" data-id="https://www.linkedin.com/pub/martin-costello/37/253/16a" data-format="hover" data-text="Martin Costello" data-related="false"></script>
    </div>
    <div class="col-md-3">
        <h4>Twitter</h4>
        <a href="https://twitter.com/@Options.Metadata.Author.SocialMedia.Twitter" class="twitter-follow-button" data-size="large" data-show-count="false" title="@Options.Metadata.Author.SocialMedia.Twitter on Twitter">Follow @Options.Metadata.Author.SocialMedia.Twitter</a>
    </div>
    <div class="col-md-3">
        <h4>Stack Overflow</h4>
        <a href="https://stackoverflow.com/users/1064169/martin-costello">
            <img src="https://stackoverflow.com/users/flair/1064169.png?theme=clean" width="208" height="58" alt="View the profile for martin_costello on Stack Overflow" title="View the profile for martin_costello on Stack Overflow">
        </a>
    </div>
    <div class="col-md-3">
        <h4>Open Hub</h4>
        <a href="https://www.openhub.net/accounts/524611?ref=Detailed" target="_blank">
            <img alt="Open Hub profile for Martin Costello" title="Open Hub profile for Martin Costello" border="0" height="35" width="230" src="https://www.openhub.net/accounts/524611/widgets/account_detailed.gif" />
        </a>
    </div>
</div>
@section scripts {
    <script async src="//platform.linkedin.com/in.js"></script>
    <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
}
